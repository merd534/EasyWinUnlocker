<Window x:Class="SystemAnalyzer.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод" Height="150" Width="300" WindowStartupLocation="CenterOwner">
	<StackPanel Margin="10">
		<Label x:Name="lblQuestion" Content="Введите значение:"/>
		<TextBox x:Name="txtAnswer" Margin="0,5,0,10"/>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Content="OK" Width="75" Click="btnDialogOk_Click" Margin="0,0,5,0"/>
			<Button Content="Cancel" Width="75" Click="btnDialogCancel_Click"/>
		</StackPanel>
	</StackPanel>
</Window>